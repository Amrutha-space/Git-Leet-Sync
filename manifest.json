{
  "manifest_version": 3,
  "name": "LeetCode GitHub Sync",
  "version": "1.0.0",
  "description": "Automatically sync accepted LeetCode solutions to GitHub repository",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://api.github.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LeetCode GitHub Sync"
  }
}
